@using ZcrlPortal.Models
@model List<DataGroup>
@{
    Layout = "~/Views/Shared/_main.cshtml";
    string actionName = ViewBag.ActionName;
}

<div class="accountDataContainer">
    @if (!string.IsNullOrWhiteSpace((string)TempData["SuccessMessage"]))
    {
        <div class="successMessage">@TempData["SuccessMessage"]</div>
    }
    <a href="@Url.Action(actionName, "Group")" class="addButton">Додати</a>
    <table>
        <tr>
            <th style="width: 5%">№</th>
            <th style="width: 50%">Назва</th>
            <th style="width: 25%">Дія</th>
        </tr>
        @if (Model.Count == 0)
        {
            <tr><td colspan="3" style="text-align: center;"><i>Записів немає</i></td></tr>
        }
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@(i + 1)</td>
                <td>@Model[i].Name</td>
                <td><a href="@Url.Action("Edit", "Group", new { id = Model[i].Id })">Редагувати</a> | <a href="@Url.Action("Delete", "Group", new { id = Model[i].Id })" onclick="return confirm('Вы впевнені, що хочете видалити @Model[i].Name?')">Видалити</a></td>
            </tr>
        }
    </table>
</div>


