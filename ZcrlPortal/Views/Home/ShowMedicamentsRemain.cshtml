@using ZcrlPortal.Models;
@model List<ZcrlPortal.ViewModels.MedGroup>
@{
    ViewBag.Title = "Залишки медикаментів";
    Layout = "~/Views/Shared/_main.cshtml";
}

@section SpecifyViewCss
{
    <link rel="stylesheet" href="@Url.Content(@"~\Styles\med-remains.css")" />
}

<div class="newsContainer">
    <div class="newsContent">
        @if (Model.Count == 0)
        {
            @:Данний розділ порожній
        }
        else
        {
            <h3 class="lowHeader">СПИСОК<br/>
        медикаментів, що є в наявності, для надання невідкладної медичної допомоги в КЗ "Запорізька центральна районна лікарня" ЗРР<br />
        станом на @ViewBag.LastUpdateDate.ToShortDateString()  року
            </h3>
            
            <br />

    <table class="medTable">
        <tr>
            <th style="width: 5%">№ з/п</th>
            <th style="width: 65%">Медикамент</th>
            <th colspan="2" style="width: 35%">Залишок</th>
        </tr>
        @foreach (var group in Model)
        {
            <tr class="medGroupNameRow">
                <td colspan="4">@group.Name.ToString()</td>
            </tr>
            for (int i = 0; i < group.MedicamentsRemains.Count; i++)
            {
                <tr class="medContentRow">
                    <td>@(i + 1)</td>
                    <td>@group.MedicamentsRemains[i].Medicament.ToString()</td>
                    <td>@group.MedicamentsRemains[i].CurrentRemain</td>
                    <td>@group.MedicamentsRemains[i].Medicament.Meter.ToString()</td>
                </tr>
            }
        }
    </table>
        }
        <br /><br />
    </div>
</div>
